{
  "name": "VOCALOID歌詞表示",
  "version": "1.10",
  "manifest_version": 3,
  "description": "ボカロ曲の歌詞をワンクリックで表示します(YouTube・ニコニコ動画)",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": { 
    "default_title": "ポップアップで歌詞を表示します",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}